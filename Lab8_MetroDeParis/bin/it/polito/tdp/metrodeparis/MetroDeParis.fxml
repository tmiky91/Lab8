<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="it.polito.tdp.metrodeparis.MetroDeParisController">
   <center>
      <VBox prefWidth="500.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="33.0">
               <children>
                  <Label text="Stazione Partenza:" />
                  <ComboBox fx:id="btnComboBoxPartenza" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <Label text="Stazione Arrivo:" />
                  <ComboBox fx:id="btnComboBoxArrivo" prefWidth="150.0" />
                  <Button fx:id="btnCalcolaPercorso" mnemonicParsing="false" onAction="#doCalcolaPercorso" text="Calcola Percorso" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextArea fx:id="txtResult">
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Label text="Lab_9 Metro_Parigi" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
</BorderPane>